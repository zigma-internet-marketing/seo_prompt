    "comparison_accordion": {
      "number": 5,
      "supports": [
        "blog",
        "page"
      ],
      "purpose": "A structured, skimmable comparison with trade-offs using 3 accordion blocks, each with 3 options and consistent sub-bullets.",
      "heading": {
        "source": "DynamicH2_5",
        "style": "editorial_or_natural_question"
      },
      "intro_paragraph": {
        "required": true,
        "sentences": "1â€“3",
        "must_include": [
          "Why comparison matters",
          "{{Keyword}} (or variation)",
          "{{Target_Location}} if provided"
        ],
        "tone": "warm_conversational"
      },
      "layout": {
        "type": "accordion",
        "accordion_blocks": 3,
        "details_per_block": 1,
        "options_per_details": 3,
        "li_per_option": 3,
        "li_labels": [
          "How it works",
          "Best fit",
          "Example"
        ]
      },
      "rules": {
        "option_overview_sentences": "2â€“3",
        "no_fragments_in_li": true
      },
      "templates": {
        "html": "<section class=\"blog-section\">\n  <h2>{{DynamicH2_5}}</h2>\n  <p>{{ComparisonIntroParagraph}}</p>\n\n  <div class=\"comparison-accordion\">\n    <details class=\"accordion-compare\">\n      <summary>{{ComparisonCategory1}}</summary>\n\n      <p><strong>A) {{OptionA1_Name}}:</strong> {{OptionA1_Overview}}</p>\n      <ul>\n        <li><em><strong>How it works:</strong></em> {{OptionA1_HowItWorks}}</li>\n        <li><em><strong>Best fit:</strong></em> {{OptionA1_BestFit}}</li>\n        <li><em><strong>Example:</strong></em> {{OptionA1_Example}}</li>\n      </ul>\n\n      <p><strong>B) {{OptionB1_Name}}:</strong> {{OptionB1_Overview}}</p>\n      <ul>\n        <li><em><strong>How it works:</strong></em> {{OptionB1_HowItWorks}}</li>\n        <li><em><strong>Best fit:</strong></em> {{OptionB1_BestFit}}</li>\n        <li><em><strong>Example:</strong></em> {{OptionB1_Example}}</li>\n      </ul>\n\n      <p><strong>C) {{OptionC1_Name}}:</strong> {{OptionC1_Overview}}</p>\n      <ul>\n        <li><em><strong>How it works:</strong></em> {{OptionC1_HowItWorks}}</li>\n        <li><em><strong>Best fit:</strong></em> {{OptionC1_BestFit}}</li>\n        <li><em><strong>Example:</strong></em> {{OptionC1_Example}}</li>\n      </ul>\n    </details>\n  </div>\n\n  <div class=\"comparison-accordion\">\n    <details class=\"accordion-compare\">\n      <summary>{{ComparisonCategory2}}</summary>\n\n      <p><strong>A) {{OptionA2_Name}}:</strong> {{OptionA2_Overview}}</p>\n      <ul>\n        <li><em><strong>How it works:</strong></em> {{OptionA2_HowItWorks}}</li>\n        <li><em><strong>Best fit:</strong></em> {{OptionA2_BestFit}}</li>\n        <li><em><strong>Example:</strong></em> {{OptionA2_Example}}</li>\n      </ul>\n\n      <p><strong>B) {{OptionB2_Name}}:</strong> {{OptionB2_Overview}}</p>\n      <ul>\n        <li><em><strong>How it works:</strong></em> {{OptionB2_HowItWorks}}</li>\n        <li><em><strong>Best fit:</strong></em> {{OptionB2_BestFit}}</li>\n        <li><em><strong>Example:</strong></em> {{OptionB2_Example}}</li>\n      </ul>\n\n      <p><strong>C) {{OptionC2_Name}}:</strong> {{OptionC2_Overview}}</p>\n      <ul>\n        <li><em><strong>How it works:</strong></em> {{OptionC2_HowItWorks}}</li>\n        <li><em><strong>Best fit:</strong></em> {{OptionC2_BestFit}}</li>\n        <li><em><strong>Example:</strong></em> {{OptionC2_Example}}</li>\n      </ul>\n    </details>\n  </div>\n\n  <div class=\"comparison-accordion\">\n    <details class=\"accordion-compare\">\n      <summary>{{ComparisonCategory3}}</summary>\n\n      <p><strong>A) {{OptionA3_Name}}:</strong> {{OptionA3_Overview}}</p>\n      <ul>\n        <li><em><strong>How it works:</strong></em> {{OptionA3_HowItWorks}}</li>\n        <li><em><strong>Best fit:</strong></em> {{OptionA3_BestFit}}</li>\n        <li><em><strong>Example:</strong></em> {{OptionA3_Example}}</li>\n      </ul>\n\n      <p><strong>B) {{OptionB3_Name}}:</strong> {{OptionB3_Overview}}</p>\n      <ul>\n        <li><em><strong>How it works:</strong></em> {{OptionB3_HowItWorks}}</li>\n        <li><em><strong>Best fit:</strong></em> {{OptionB3_BestFit}}</li>\n        <li><em><strong>Example:</strong></em> {{OptionB3_Example}}</li>\n      </ul>\n\n      <p><strong>C) {{OptionC3_Name}}:</strong> {{OptionC3_Overview}}</p>\n      <ul>\n        <li><em><strong>How it works:</strong></em> {{OptionC3_HowItWorks}}</li>\n        <li><em><strong>Best fit:</strong></em> {{OptionC3_BestFit}}</li>\n        <li><em><strong>Example:</strong></em> {{OptionC3_Example}}</li>\n      </ul>\n    </details>\n  </div>\n</section>"
      }
