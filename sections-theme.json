{
  "version": "3.0.0",
  "file": "sections-theme.json",
  "notes": [
    "Unified section planning + section writing behavior. Do not output this file verbatim in generation.",
    "Selection/order is defined under plan. Per-section writing guidance is defined under sections."
  ],
  "sections": {
    "social_sections": {
      "number": 1,
      "supports": [
        "blog",
        "page"
      ],
      "purpose": "Optional social/meta preface block used in some wrappers to expose title, meta description, and intro_copy for downstream automation. Not visible to end readers unless the CMS renders it.",
      "rendering": {
        "html": [
          "<h1>{{DynamicTitle}}</h1>",
          "<description>{{DynamicMetaDescription}}</description>",
          "<intro_copy>{{IntoCopy}}</intro_copy>"
        ],
        "text": [
          "{{DynamicTitle}}",
          "description: {{DynamicMetaDescription}}",
          "intro_copy: {{IntoCopy}}"
        ]
      },
      "rules": {
        "only_when": [
          "manual_sections_empty",
          "section_in_plan"
        ],
        "notes": [
          "Do not use 'In this article' style meta lines (enforced by forbidden phrases)."
        ]
      },
      "templates": {
        "html": "<h1>{{DynamicTitle}}</h1><br>\n<description>{{DynamicMetaDescription}}</description><br>\n<intro_copy>{{IntoCopy}}</intro_copy><br>"
      }
    },
    "headline_introduction": {
