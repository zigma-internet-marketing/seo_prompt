      "templates": {
        "html": "<script type=\"application/ld+json\">\n{\n  \"@context\": \"https://schema.org\",\n  \"@graph\": [\n    {\n      \"@type\": \"{{@type}}\",\n      \"inLanguage\": \"en-CA\",\n      \"about\": {\"@type\": \"Thing\", \"name\": \"{{Keyword}}\"},\n      \"headline\": \"{{DynamicTitle}}\",\n      \"name\": \"{{DynamicTitle}}\",\n      \"description\": \"{{DynamicMetaDescription}}\",\n      \"image\": \"{{Feature_Image_URL}}\",\n      \"primaryImageOfPage\": {\n        \"@type\": \"ImageObject\",\n        \"url\": \"{{Feature_Image_URL}}\"\n      },\n      \"author\": {\n        \"@type\": \"Person\",\n        \"name\": \"{{Author_Name}}\",\n        \"url\": \"{{Author_Link}}\"\n      },\n      \"publisher\": {\n        \"@id\": \"{{Business_URL}}#business\"\n      },\n      \"mainEntityOfPage\": {\n        \"@type\": \"WebPage\",\n        \"@id\": \"{{Full_Post_URL}}\"\n      },\n      \"datePublished\": \"{{date_published}}\",\n      \"dateModified\": \"{{date_modified}}\"\n    },\n    {\n      \"@type\": \"LocalBusiness\",\n      \"@id\": \"{{Business_URL}}#business\",\n      \"name\": \"{{Business_Name}}\",\n      \"image\": \"{{Logo_URL}}\",\n      \"url\": \"{{Business_URL}}\",\n      \"telephone\": \"{{Phone_Number_Link}}\",\n      \"address\": {\n        \"@type\": \"PostalAddress\",\n        \"streetAddress\": \"{{Street_Address}}\",\n        \"addressLocality\": \"{{City}}\",\n        \"addressRegion\": \"{{Province}}\",\n        \"postalCode\": \"{{Postal_Code}}\",\n        \"addressCountry\": \"CA\"\n      },\n      \"openingHoursSpecification\": [\n        {\n          \"@type\": \"OpeningHoursSpecification\",\n          \"dayOfWeek\": {{Work_day}},\n          \"opens\": \"{{Open_Hour}}\",\n          \"closes\": \"{{Close_Hour}}\"\n        }\n      ],\n      \"sameAs\": [\n        {{SameAsList}}\n      ]\n    },\n    {\n      \"@type\": \"FAQPage\",\n      \"mainEntity\": [\n        { \"@type\": \"Question\", \"name\": \"{{FAQ1_Q}}\", \"acceptedAnswer\": { \"@type\": \"Answer\", \"text\": \"{{FAQ1_A}}\" } },\n        { \"@type\": \"Question\", \"name\": \"{{FAQ2_Q}}\", \"acceptedAnswer\": { \"@type\": \"Answer\", \"text\": \"{{FAQ2_A}}\" } },\n        { \"@type\": \"Question\", \"name\": \"{{FAQ3_Q}}\", \"acceptedAnswer\": { \"@type\": \"Answer\", \"text\": \"{{FAQ3_A}}\" } },\n        { \"@type\": \"Question\", \"name\": \"{{FAQ4_Q}}\", \"acceptedAnswer\": { \"@type\": \"Answer\", \"text\": \"{{FAQ4_A}}\" } },\n        { \"@type\": \"Question\", \"name\": \"{{FAQ5_Q}}\", \"acceptedAnswer\": { \"@type\": \"Answer\", \"text\": \"{{FAQ5_A}}\" } }\n      ]\n    },\n    {\n      \"@type\": \"BreadcrumbList\",\n      \"itemListElement\": [\n        { \"@type\": \"ListItem\", \"position\": 1, \"name\": \"Home\", \"item\": \"{{Business_URL}}\" },\n        { \"@type\": \"ListItem\", \"position\": 2, \"name\": \"Blog\", \"item\": \"{{Blog_URL}}\" },\n        { \"@type\": \"ListItem\", \"position\": 3, \"name\": \"{{Keyword}}\", \"item\": \"{{Full_Post_URL}}\" }\n      ]\n    },\n    {\n      \"@type\": \"Review\",\n      \"itemReviewed\": { \"@type\": \"Organization\", \"name\": \"{{Business_Name}}\" },\n      \"reviewRating\": { \"@type\": \"Rating\", \"ratingValue\": \"5\", \"bestRating\": \"5\" },\n      \"author\": { \"@type\": \"Person\", \"name\": \"{{Review_Author}}\" },\n      \"reviewBody\": \"{{Review_Quote}}\"\n    }\n  ]\n}\n</script>"
      }
